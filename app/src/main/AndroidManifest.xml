<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.execom.todolistgrouptwo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ToDoApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_done_all_black_48dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddTaskActivity_" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activity.HomeActivity_" />
        </activity>
        <activity android:name=".activity.LoginActivity_" />
        <activity android:name=".activity.RegisterActivity_" />
        <activity android:name=".activity.TaskDetailActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomeActivity_" />
        </activity>
    </application>

</manifest>